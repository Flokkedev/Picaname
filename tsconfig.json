{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "jest",
      "node",
      "react-test-renderer",
      "expo-blur",
      "expo-router",
      "expo-symbols",
      "expo-web-browser",
      "expo-haptics",
      "@react-navigation/bottom-tabs"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "components/__tests__"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "eslint.config.mjs"
  ]
}
